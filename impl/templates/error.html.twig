{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('/styles/login.css') }}">
{% endblock %}

{% block header %}
    <div class="head">
        <h1>Něco se pokazilo</h1>
        <p><a href="{{ path('my_decks') }}">Zpět</a></p>
    </div>
{% endblock %}

{% block content %}
    <div class="error">
        <h3>{{ message }}</h3>
        <p>Chyba {{ status_code }}</p>
        {% if status_code == 404 %}
            <p>Omlouváme se, ale stránka, kterou hledáte, neexistuje. Možná byla přesunuta nebo smázana.</p>
        {% endif %}
    </div>
{% endblock %}