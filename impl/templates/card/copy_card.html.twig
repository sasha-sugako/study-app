{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('/styles/form.css') }}">
{% endblock %}

{% block header %}
    <div class="head">
        <h1>{{ title }}</h1>
        <p><a href="{{ path('deck', {id: card.deck.id}) }}">Zpět</a></p>
    </div>
{% endblock %}

{% block content %}
    <section class="form">
        {{ form_start(form) }}
        <fieldset>
            <fieldset role="group">
                {{ form_label(form.deck_choice) }}
                {{ form_widget(form.deck_choice) }}
                {{ form_errors(form.deck_choice) }}
            </fieldset>
        </fieldset>
        {{ form_errors(form) }}
        {{ form_rest(form) }}
        <button type="submit">Zkopírovat</button>
        {{ form_end(form) }}
    </section>
{% endblock %}
