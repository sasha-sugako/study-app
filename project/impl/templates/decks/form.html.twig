{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('/styles/form.css') }}">
{% endblock %}

{% block header %}
    <div class="head">
        <h1>{{ title }}</h1>
        <p><a href="{{ path('my_decks') }}">Zpět</a></p>
    </div>
{% endblock %}

{% block content %}
    <section class="form">
        {{ form_start(form) }}
        <div>
            <fieldset role="group">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name) }}
                    {{ form_errors(form.name) }}
            </fieldset>
            <fieldset role="group">
                    {{ form_label(form.about) }}
                    {{ form_widget(form.about) }}
                    {{ form_errors(form.about) }}
            </fieldset>
        </div>
        <div class="categories">
                <p>Kategorie</p>
                <div class="categories_choice">
                    {% for child in form.categories %}
                        <div class="checkbox-wrapper">
                            {{ form_widget(child, { attr: { class: 'custom_checkbox' } }) }}
                            {{ form_label(child, null, { label_attr: { class: 'custom_label' } }) }}
                            {{ form_errors(child) }}
                        </div>
                    {% endfor %}
                </div>
        </div>
        {{ form_errors(form) }}
        {{ form_rest(form) }}
        <button type="submit">{{ deck ? 'Upravit' : 'Vytvořit' }}</button>
        {{ form_end(form) }}
    </section>
{% endblock %}
